<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LogOutActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:outlineAmbientShadowColor="@color/darkGrey"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            tools:targetApi="p" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:id="@+id/patient_card"
        style="@style/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardBlue"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    style="@style/cardAvatar"
                    android:src="@drawable/patient_avatar" />

                <LinearLayout
                    style="@style/cardText"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/patient_name"
                        style="@style/CardTitle"
                        android:text="" />

                    <TextView
                        android:id="@+id/patient_desc"
                        style="@style/CardSub"
                        android:text="" />

                </LinearLayout>

            </LinearLayout>
            <Button
                android:background="@drawable/bordernoline"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:id="@+id/btn_logout"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="注销"
                android:textColor="@color/cardBlue"
                android:textSize="18sp" />
        </LinearLayout>



    </androidx.cardview.widget.CardView>



</LinearLayout>